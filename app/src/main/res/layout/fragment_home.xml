<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Hey, Find Your"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/wc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fy"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Workout Class"
                android:textColor="#2B2B2B"
                android:textSize="32sp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cards"
                android:layout_below="@+id/wc"
                android:layout_marginTop="10dp"
                android:layout_width="370dp"
                android:layout_gravity="center"
                android:layout_height="180dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/stepimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stepimg"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/dptxt"
                android:layout_width="210dp"
                android:layout_height="22dp"
                android:layout_below="@id/cards"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="Diet Plan"
                android:textColor="#2B2B2B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dpcard"
                android:layout_width="370dp"
                android:layout_height="80dp"
                android:layout_below="@+id/dptxt"
                android:layout_gravity="center"
                app:cardElevation="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/dpimgoncard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dietcard"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/categories"
                android:layout_width="210dp"
                android:layout_height="26dp"
                android:layout_below="@id/dpcard"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="Categories"
                android:textColor="#2B2B2B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:id="@+id/horisc"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/categories"
                android:contentDescription="@string/app_name">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_width="140dp"
                        android:layout_height="234dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/llyoga"
                            android:layout_width="142dp"
                            android:layout_height="234dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/yogacard" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_width="140dp"
                        android:layout_height="234dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/llmuscle"
                            android:layout_width="142dp"
                            android:layout_height="234dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/musclecard" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_width="140dp"
                        android:layout_height="234dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/llfat"
                            android:layout_width="142dp"
                            android:layout_height="234dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fatlossimg" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="140dp"
                        android:layout_height="234dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/llbmi"
                            android:layout_width="142dp"
                            android:layout_height="234dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bmicalcimg" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>